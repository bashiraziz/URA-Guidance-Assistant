APP_ENV=development
APP_DEBUG=true

# Neon/Postgres connection; include sslmode=require for Neon.
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/ura_guidance

DB_POOL_SIZE=3
DB_MAX_OVERFLOW=2
DB_POOL_TIMEOUT_SECONDS=30
SQL_ECHO=false

API_JWT_SECRET=replace-with-strong-random-secret
API_JWT_ALGORITHM=HS256
API_JWT_ISSUER=ura-guidance-web
API_JWT_AUDIENCE=ura-guidance-api

RETRIEVER_MODE=fts
RETRIEVER_TOP_K=6

GEMINI_ENABLED=false
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

QUOTA_DAILY_REQUESTS=25
QUOTA_DAILY_OUTPUT_TOKENS=2000
QUOTA_MINUTE_REQUESTS=10
QUOTA_INFLIGHT_REQUESTS=1

DOCS_ROOT=../../docs
CORS_ORIGINS=http://localhost:3000

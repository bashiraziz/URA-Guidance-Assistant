# Shared DB used by BetterAuth in Next.js.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ura_guidance

# BetterAuth
BETTER_AUTH_SECRET=replace-with-strong-random-secret
BETTER_AUTH_URL=http://localhost:3000

